{
  "manifest_version": 3,
  "name": "WebLLM Doc Chat",
  "version": "0.1.0",
  "description": "Chat with your documents locally using AI - Privacy-first, runs entirely in your browser",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "offscreen",
    "file://*/*"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chat with this document",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["offscreen.html", "pdf.worker.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}

